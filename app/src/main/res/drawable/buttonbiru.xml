<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#06b8cf"/>
            <stroke
                android:width="1dp"
                android:color="#0cfade"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#04e2e2"
                android:endColor="#01bebe"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c3f9f8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
